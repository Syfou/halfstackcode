{
  "name": "MIGHTY FRAME",
  "description": "You have the same base speed, strength, and reach of a normal player, but a very small hitbox. Do with that what you will.",
  "type": "origins:action_on_callback",
  "entity_action_chosen": {
    "type": "origins:and",
    "actions": [
      {
        "type": "origins:execute_command",
        "command": "scale persist set pehkui:height 0.5 @s"
      },
      {
        "type": "origins:execute_command",
        "command": "scale persist set pehkui:width 0.5 @s"
      }
      ]
  },
  "entity_action_added": {
    "type": "origins:and",
    "actions": [
      {
        "type": "origins:execute_command",
        "command": "scale persist set pehkui:height 0.5 @s"
      },
      {
        "type": "origins:execute_command",
        "command": "scale persist set pehkui:width 0.5 @s"
      }
    ]
  },

  "entity_action_lost": {
        "type": "origins:execute_command",
        "command": "scale reset pehkui:height @s"
  },
  "hidden": true
}